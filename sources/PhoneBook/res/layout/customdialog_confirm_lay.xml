<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/custom_dialog_confirm_title_lay_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/custom_dialog_confirm_icon_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@drawable/custom_alert_dialog_icon_dra" />

            <TextView
                android:id="@+id/custom_dialog_confirm_title_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/common_button_default_notpress_col"
                android:textSize="@dimen/text_size_60_point" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/common_button_default_notpress_col" />
    </LinearLayout>

    <TextView
        android:id="@+id/custom_dialog_confirm_content_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="@dimen/text_size_60_point" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#d1d5d0"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:weightSum="1" >

        <Button
            android:id="@+id/custom_dialog_confirm_button_no_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1px"
            android:layout_weight="0.5"
            android:background="@drawable/common_button_color_gray_dra"
            android:padding="10dp"
            android:text="@string/custom_dialog_button_no_str"
            android:textColor="#333"
            android:textSize="@dimen/text_size_60_point"
            android:textStyle="bold" />

        <Button
            android:id="@+id/custom_dialog_confirm_button_yes_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1px"
            android:layout_weight="0.5"
            android:background="@drawable/common_button_color_gray_dra"
            android:padding="10dp"
            android:text="@string/custom_dialog_button_yes_str"
            android:textColor="#333"
            android:textSize="@dimen/text_size_60_point"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>